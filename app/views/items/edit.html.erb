<h1>Edit Item: <%= @item.name %></h1>

<%= simple_form_for @item, url: "/items/update/#{@item.id}", method: "POST" do |f| %>
  <div class="row">
    <div class="col">
      <%= f.input :name, input_html: { class: "form-control" }  %>
    </div>
    <div class="col">
      <%= f.input :description, input_html: { class: "form-control" } %>
    </div>
    <div class="col">
      <%= f.input :quantity, input_html: { class: "form-control" } %>
    </div>
		<div class="col">
			<%= f.association :category, input_html: { class: "form-control" } %>
		</div>
  </div>
  <hr>
  <%= f.submit :save %>
<% end %>
